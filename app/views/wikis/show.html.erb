<div>
  <h1>
    <%= @wiki.title %>    
    <div id="wiki-private">
      <% if @wiki.private %>
        PRIVATE
      <% end %>
    </div> <br>
    <small>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
    </small>
  </h1>
</div>

<div class="row">
  <div class="col">
    <strong>Preview</strong>
  </div>
  <div class="col panel panel-default markup">
    <div class="panel-body"><%= markdown(@wiki.body) %></div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <strong>Collaborators:
    </strong>
    <% @collabs.each do |collab| %>
    <p><%= collab.email %></p>
    <% end %>
  </div>